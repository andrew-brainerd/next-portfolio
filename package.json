{
  "name": "next-portfolio",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.18.3",
  "scripts": {
    "build": "next build",
    "clean": "rm -rf node_modules .next",
    "dev": "next dev",
    "lint": "pnpm lint:js && pnpm lint:css",
    "lint:fix": "pnpm lint:js:fix && pnpm lint:css:fix",
    "lint:js": "eslint .",
    "lint:js:fix": "eslint . --fix",
    "lint:css": "stylelint \"**/*.css\"",
    "lint:css:fix": "stylelint \"**/*.css\" --fix",
    "prepare": "husky",
    "start": "next start",
    "update-packages": "npx npm-check-updates@latest -u && pnpm i && git add . && git commit -m \"Update packages\"",
    "verify": "npx tsc && pnpm lint"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@lottiefiles/react-lottie-player": "^3.6.0",
    "@mui/icons-material": "^7.3.4",
    "@mui/material": "^7.3.4",
    "@tailwindcss/postcss": "^4.1.14",
    "@types/node": "24.8.1",
    "@types/react": "19.2.2",
    "@types/react-dom": "19.2.2",
    "@uidotdev/usehooks": "^2.4.1",
    "axios": "^1.12.2",
    "clsx": "^2.1.1",
    "dayjs": "^1.11.18",
    "eslint": "9.38.0",
    "eslint-config-next": "16.0.0-beta.0",
    "firebase": "^12.4.0",
    "howlongtobeat": "^1.8.0",
    "next": "16.0.0-beta.0",
    "postcss": "^8.5.6",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "tailwindcss": "^4.1.14",
    "typescript": "6.0.0-dev.20251017",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@typescript-eslint/parser": "^8.25.0",
    "babel-plugin-react-compiler": "^1.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.4",
    "postcss-html": "^1.8.0",
    "sass": "^1.93.2",
    "stylelint": "^16.25.0",
    "stylelint-config-standard": "^39.0.1",
    "stylelint-order": "^7.0.0"
  },
  "lint-staged": {
    "**/*": "npx prettier --write --ignore-unknown"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "19.2.2",
      "@types/react-dom": "19.2.2"
    },
    "onlyBuiltDependencies": [
      "@firebase/util",
      "@parcel/watcher",
      "@tailwindcss/oxide",
      "protobufjs",
      "sharp"
    ]
  }
}
